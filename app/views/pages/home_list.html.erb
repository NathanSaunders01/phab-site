<div class="content">
  <div class="page-header">
    <h1>Home</h1>
  </div>
  <div class="row">
    <div class="col-md-4 col-sm-4 col-xs-12">
      <h4 id="news">Sections</h4>
    </div>
    <div class="col-md-8 col-sm-8 col-xs-12">
        <% if @home_pages.blank? %>
          <p class="text-center blank-object">You have no news on your site yet!</p>
        <% else %>
          <div class="image-table-area">
            <table class="table table-striped articles-table">
              <thead>
                <tr>
                  <th>Title</th>
                  <th class="hidden-xs">Content</th>
                  <th class="text-center">Published</th>
                  <th class="text-center">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @home_pages.each do |news| %>
                  <%= render 'article_table', obj: news %>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
        <div style="width: 100%; display: flex; flex-direction: column; align-items: flex-end">
          <%= link_to "Add a section", new_page_path(:site_page => "home"), class:"btn btn-md btn-phab" %>
          <%= link_to "Preview", root_path(preview: "true"), class:"btn btn-md btn-phab" %>
        </div>
    </div>
  </div>
</div>  