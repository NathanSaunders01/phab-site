<%= form_for(@club, html: {role: "form"}) do |f| %>
  <div class="form-group">
    <%= f.label :club_name %>
    <%= f.text_field :club_name, class:"form-control", placeholder: "Club name...", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :club_leader %>
    <%= f.text_field :club_leader, class:"form-control", placeholder: "Club leader's name...", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :contact_email %>
    <%= f.text_area :contact_email, class:"form-control", placeholder: "Club email..." %>
  </div>
  <div class="form-group">
    <%= f.label :contact_number %>
    <%= f.number_field :contact_number, class:"form-control", placeholder: "Club number..." %>
  </div>
  <div class="form-group">
    <%= f.label :club_logo %>
    <%= f.file_field :club_logo, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :meeting_times %>
    <%= f.text_field :meeting_times, class:"form-control", placeholder: "Eg. Every other Sunday..." %>
  </div>
  <div class="form-group">
    <%= f.label :meeting_address %>
    <%= f.text_field :meeting_address, class:"form-control", placeholder: "Club meeting address..." %>
  </div>
  <div class="form-group">
    <%= f.submit class:"btn btn-success btn-md" %>
  </div>
<% end %>