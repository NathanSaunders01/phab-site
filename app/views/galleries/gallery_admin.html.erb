<div class="content">
  <div class="page-header">
    <h1>Galleries</h1>
  </div>
  <div class="row">
    <div class="col-md-4 col-sm-4 col-xs-12">
      <h4>Gallery list</h4>
    </div>
    <div class="col-md-8 col-sm-8 col-xs-12">
      <% if @galleries.blank? %>
        <p class="text-center blank-object">You have no galleries on your site yet!</p>
      <% else %>
        <div class="image-table-area">
          <div class="image-table-container">
            <table class="table">
              <thead>
                <tr>
                  <th>Preview</th>
                  <th>Title</th>
                  <th class="hidden-xs">Description</th>
                  <th class="text-center">Published</th>
                  <th class="text-center">Actions</th>
                </tr>
              </thead>
              <tbody style="background-color: white;">
                <% @galleries.each do |gallery| %>
                  <%= render 'gallery_table', gallery: gallery %>
                <% end %>
              </tbody>
            </table>                
          </div>
        </div>
      <% end %>
      <%= link_to "Create gallery", new_gallery_path, class:"btn btn-md btn-phab" %>
    </div>
  </div>
</div>  