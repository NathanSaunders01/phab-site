<div class="pipe-container">
  <div class="well">
    <h1>Gallery</h1>

    <input type="hidden" id="galleryID" value="<%= @gallery.id %>">
  
    <p>
      <b>Name: </b>
      <%= @gallery.name %>
    </p>
  
    <p>
      <b>Description: </b>
      <%= @gallery.description %>
    </p>
  
    <div class="form-actions">
      <%= link_to 'Back', galleries_path, :class => 'btn btn-mini'  %>
      <%= link_to 'Edit gallery', edit_gallery_path(@gallery), :class => 'btn btn-mini' %>
      <%= link_to 'Delete gallery', gallery_path(@gallery), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-mini' %>
    </div>
    
    <h2>Pictures <small>(<%= @pictures.size %>)</small></h2>
    <ul class="thumbnails files" style="display: inline-block;">
      <% unless @pictures.empty? %>
        <% @pictures.each do |pic| %>
          <li id="picture_<%= pic.id %>" style="float: left; width: 200px;">
          <div class="thumbnail">
            <%= image_tag pic.image.url %>
            <div class="caption">
              <p style="text-align: center;">
              <%= link_to "Edit picture", gallery_picture_path(@gallery, pic) %>
      
              <%=
                link_to "Delete picture", gallery_picture_path(@gallery, pic),
                  :data => { :confirm => "Are you sure?" },
                  :method => :delete
                %>
      
              </p>
            </div>
          </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>

