<div class="modal fade" id="img_popup_<%= obj.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <%= form_for [Gallery.find(params[:gallery_id]), obj] do |f| %>
                <div class="modal-header">
                    <div class="col-md-12 col-xs-12 dash-modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title text-center" id="myModalLabel">Edit Picture</h4>
                    </div>
                </div>
                <div class="modal-body text-left">
                    <div class="popup-img-container">
                        <% if !obj.image.blank? %>
                            <%= image_tag(obj.image.url(:medium), class:"popup-img-edit") %>
                        <% end %>
                    </div>
                
                    <div class="form-group">
                        <%= f.label :description, "Caption", :class => 'control-label' %>
                        <%= f.text_field :description, :class => 'form-control' %>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <span style="float: left;">
                            <%= f.submit nil, :class => 'btn btn-md btn-phab-form' %>
                        </span>
                        <span style="float: right;">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </span>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

