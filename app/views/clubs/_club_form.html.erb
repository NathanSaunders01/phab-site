<%= form_for(@club, html: {multipart: true, role: "form"}) do |f| %>
  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-sm-4 col-xs-12">
        <%= f.label :club_name %>
      </div>
      <div class="col-md-8 col-sm-8 col-xs-12">
        <%= f.text_field :club_name, class:"form-control", placeholder: "Club name", autofocus: true %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-sm-4 col-xs-12">
        <%= f.label :club_leader %>
      </div>
      <div class="col-md-8 col-sm-8 col-xs-12">
        <%= f.text_field :club_leader, class:"form-control", placeholder: "Club leader's name" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-sm-4 col-xs-12">
        <%= f.label :contact_email %>
      </div>
      <div class="col-md-8 col-sm-8 col-xs-12">
        <%= f.text_field :contact_email, class:"form-control", placeholder: "Club email" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-sm-4 col-xs-12">
         <%= f.label :contact_number %>
      </div>
      <div class="col-md-8 col-sm-8 col-xs-12">
        <%= f.number_field :contact_number, class:"form-control", placeholder: "Club number" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-sm-4 col-xs-12">
         <%= f.label :club_logo %>
      </div>
      <div class="col-md-8 col-sm-8 col-xs-12">
        <% if !club.club_logo.blank? %>
          <div class="">
            <small style="vertical-align: top; font-size: 14px;">Current:</small>
            <%= image_tag(club.club_logo.url(:thumb)) %>
          </div>
        <% end %>
        <%= f.file_field :club_logo %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-sm-4 col-xs-12">
         <%= f.label :meeting_time %>
      </div>
      <div class="col-md-8 col-sm-8 col-xs-12">
        <%= f.text_field :meeting_time, class:"form-control", placeholder: "Eg. Every other Sunday at 2pm" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-sm-4 col-xs-12">
         <%= f.label :meeting_address %>
      </div>
      <div class="col-md-8 col-sm-8 col-xs-12">
        <%= f.text_field :meeting_address, class:"form-control", placeholder: "Club meeting address" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-sm-4 col-xs-12">
         <%= f.label :bg_image, "Website Background" %>
      </div>
      <div class="col-md-8 col-sm-8 col-xs-12">
        <%= f.file_field :bg_image %>
        <%= f.number_field :bg_position, class:"form-control", placeholder: "Background position" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="right">
      <%= f.submit class:"btn btn-phab-form btn-md" %>
    </div>
  </div>
<% end %>