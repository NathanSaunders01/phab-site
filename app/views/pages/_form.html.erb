<%= form_for(@page, html: {multipart: true, role: "form"}) do |f| %>
  <div class="form-group">
    <%= f.label :site_page, "Page" %>
    <% if params[:site_page].present? %>
        <%= select_tag "page[site_page]", options_for_select([["Home", "home"], ["Event", "event"], ["News", "news"], ["About", "about"]], params[:site_page]), class: "form-control" %>
    <% else %>
        <%= select_tag "page[site_page]", options_for_select([["Home", "home"], ["Event", "event"], ["News", "news"], ["About", "about"]], f.object.site_page ), class: "form-control" %>
    <% end %>
    
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:"form-control", placeholder: "Article title...", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :date_of_event %>
    <%= f.date_select :date_of_event, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Content" %>
    <%= f.text_area :content_one, class:"form-control", rows: 6, placeholder: "Content..." %>
  </div>
  <div class="form-group">
    <%= f.label "Image" %>
    <%= f.file_field :img_one, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :img_one_format, "First Image Format" %>
    <%= select_tag "page[img_one_format]", options_for_select([["Banner Separator", "banner"], ["Square Separator", "square-sep"], ["Inline Square", "in-square"]], f.object.img_one_format), class: "form-control" %>
  </div>
  <div class="form-group" id="block_2" style="display: none;">
    <%= f.label "More Content" %>
    <%= f.text_area :content_two, class:"form-control", placeholder: "More content..." %>
  </div>
  <div class="form-group" id="image_2" style="display: none;">
    <%= f.label "Another Image" %>
    <%= f.file_field :img_two, class:"form-control" %>
  </div>
  <div class="form-group" style="display: none;">
    <%= f.label :img_two_format, "Second Image Format" %>
    <%= select_tag "page[img_two_format]", options_for_select([["Banner Separator", "banner"], ["Square Separator", "square-sep"], ["Inline Square", "in-square"]], f.object.img_two_format), class: "form-control" %>
  </div>
  <div class="form-group" id="block_3" style="display: none;">
    <%= f.label "Event More Content" %>
    <%= f.text_area :content_three, class:"form-control", placeholder: "More content..." %>
  </div>
  <div class="form-group">
    <%= f.submit class:"btn btn-success btn-md" %>
    <button type="button" class="btn btn-md btn-primary" id="more_content">Add Content Block</button>
    <button type="button" class="btn btn-md btn-primary" id="more_images">Add Image</button>
  </div>
<% end %>