<tr>
  <td>
    <% if gallery.pictures.size > 0 %>
      <%= link_to gallery_path(gallery) do %><%= image_tag(gallery.find_thumb_image, class:"pic-thumbnail") %><% end %>
    <% else %>
      <%= link_to gallery_path(gallery) do %><%= image_tag(club.club_logo, class:"pic-thumbnail") %><% end %>
    <% end %>
  </td>
  <td style="font-weight: bold;"><%= link_to gallery.name, gallery_path(gallery), class:"text-success" %></td>
  <td class="hidden-xs"><%= truncate(gallery.description, length: 43, separator: /\s/) %></td>
  <td>
    <% if gallery.published == true %>
      Yes
    <% else %>
      No
    <% end %>
    
  </td>
  <td class="text-center">
    <li class="list-unstyled dropdown">
      <i class="glyphicon glyphicon-option-vertical" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right">
        <% if gallery.published == false %>
          <li><%= link_to "Preview", gallery_path(gallery) %></li>
          <li><%= link_to "Publish", published_gallery_path(gallery) %></li>
        <% else %>
          <li><%= link_to "Unpublish", published_gallery_path(gallery) %></li>
        <% end %>
        <li><%= link_to "Edit", gallery_pictures_path(gallery) %></li>
        <li>
          <%= link_to "Delete", gallery_path(gallery), method: :delete, data: 
            {confirm: "Are you sure you want to delete this gallery?"} %>
        </li>
      </ul>
    </li>
  </td>
</tr>