<div class="content">
  <div class="page-header">
    <h1>Events</h1>
  </div>
  <div class="row">
    <div class="col-md-4 col-sm-4 col-xs-12">
      <h4 id="news">Pages</h4>
    </div>
    <div class="col-md-8 col-sm-8 col-xs-12">
        <% if @event_pages.blank? %>
          <p class="text-center blank-object">You have no events on your site yet!</p>
        <% else %>
          <div class="image-table-area">
            <table class="table articles-table">
              <thead>
                <tr>
                  <th>Title</th>
                  <th class="hidden-xs">Content</th>
                  <th class="text-center">Published</th>
                  <th class="text-center">Actions</th>
                </tr>
              </thead>
              <tbody style="background-color: white;">
                <% @event_pages.each do |news| %>
                  <%= render 'article_table', obj: news %>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      <%= link_to "Post event", new_page_path(:site_page => "event"), class:"btn btn-md btn-phab" %>
    </div>
  </div>
</div>  